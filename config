# Create Log out, Reboot, Poweroff bindings
set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $i3_path/i3exit lock, mode "default"
    bindsym e exec --no-startup-id $i3_path/i3exit logout, mode "default"
    bindsym s exec --no-startup-id $i3_path/i3exit suspend, mode "default"
#    bindsym h exec --no-startup-id $i3_path/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id $i3_path/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id $i3_path/i3exit shutdown, mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Shift+Left resize shrink width 5 px or 5 ppt
        bindsym Shift+Down resize grow height 5 px or 5 ppt
        bindsym Shift+Up resize shrink height 5 px or 5 ppt
        bindsym Shift+Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $mode_external_pos External screen position: ↑, →, ↓, ← (Shift for VGA monitor)
mode "$mode_external_pos" {
        bindsym Left		exec xrandr --output $OUTPUT_H --auto --left-of $OUTPUT_MAIN
        bindsym Right		exec xrandr --output $OUTPUT_H --auto --right-of $OUTPUT_MAIN
        bindsym Up		exec xrandr --output $OUTPUT_H --auto --above $OUTPUT_MAIN
        bindsym Down		exec xrandr --output $OUTPUT_H --auto --below $OUTPUT_MAIN
        bindsym Shift+Left	exec xrandr --output $OUTPUT_V --auto --left-of $OUTPUT_E
        bindsym Shift+Right	exec xrandr --output $OUTPUT_V --auto --right-of $OUTPUT_E
        bindsym Shift+Up	exec xrandr --output $OUTPUT_V --auto --above $OUTPUT_E
        bindsym Shift+Down	exec xrandr --output $OUTPUT_V --auto --below $OUTPUT_E
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+s mode "$mode_external_pos"

set $mode_screen Multi-monitor setup: (e)xternal only, (i)nternal only, (c)lone, (s)eparated, (h) home dock
mode "$mode_screen" {
    bindsym c exec --no-startup-id xrandr --output $OUTPUT_H --auto --output $OUTPUT_MAIN --auto
    bindsym e exec --no-startup-id xrandr --output $OUTPUT_H --auto --output $OUTPUT_MAIN --off
    bindsym i exec --no-startup-id xrandr --output $OUTPUT_MAIN --auto --output $OUTPUT_H --off --output $OUTPUT_V --off
    bindsym s exec --no-startup-id xrandr --output $OUTPUT_MAIN --auto --output $OUTPUT_V --right-of $OUTPUT_H
    bindsym h exec --no-startup-id xrandr --output $OUTPUT_H --auto --above $OUTPUT_MAIN --output $OUTPUT_V --right-of $OUTPUT_H --rotate left

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "$mode_screen"

set $mode_bar_pos Bar position: (k) kill polybar, (a) all displays, (e) external setup
mode "$mode_bar_pos" {
    bindsym k exec --no-startup-id killall -q polybar
    bindsym a exec --no-startup-id $HOME/.config/polybar/launch.sh
    bindsym e exec --no-startup-id $HOME/.config/polybar/launch_with_externals.sh

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$mode_bar_pos"

